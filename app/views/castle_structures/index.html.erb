<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@search, :result_no,'更新回', default_order: :desc) %></th>
      <th><%= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc) %></th>
      <th><%= sort_link(@search, :frame_type, '枠種別', default_order: :desc) %></th>
      <th><%= sort_link(@search, :i_no, 'ID', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_unit_type, '種別', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_orig_name, '元の名前', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_orig_name, 'アイテム名', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_fuka1, '付加1', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_fuka2, '付加2', default_order: :desc) %></th>
      <th><%= sort_link(@search, :item_stock, '在庫', default_order: :desc) %></th>
      <th colspan="2">結果リンク</th>
    </tr>
  </thead>

  <tbody>
    <% @castle_structures.each do |castle_structure| %>
      <tr>
        <td><%= castle_structure.result_no %></td>
        <td><%= castle_structure.p_name.name.html_safe + "(" + sprintf("%d",castle_structure.e_no) + ")" %></td>
        <td><%= castle_structure.frame_type_name.name %></td>
        <td><%=  if castle_structure.i_no > 0  then
                     castle_structure.i_no
                 else
                    "推測不能"
                 end %>
        </td>
        <td><%= castle_structure.item.unit_type_name.name if castle_structure.i_no > 0 %></td>
        <td><%= castle_structure.item.unit_orig_name.name if castle_structure.i_no > 0 %></td>
        <td><%= castle_structure.item.name if castle_structure.i_no > 0 %></td>
        <td><%= castle_structure.item.fuka1_name.name if castle_structure.i_no > 0  %></td>
        <td><%= castle_structure.item.fuka2_name.name if castle_structure.i_no > 0  %></td>
        <td><%= castle_structure.item.stock if castle_structure.i_no > 0  %></td>
    	<td><%= link_to " 結果", "http://blacktea.sakura.ne.jp/teaconvini/RESULT/c"+sprintf("%04d",castle_structure.e_no)+".html", :target => "_blank" %></td>
        <td><%= if  castle_structure.result_no < @last_result then
                    generate_text = castle_structure.generate_no > 0 ? "_"+sprintf("%d",castle_structure.generate_no) : "";
                    link_to " 過去結果", "http://teacon.kitunebi.com/TCV_001/"+sprintf("%03d", castle_structure.result_no)+generate_text+"/RESULT/c"+sprintf("%04d",castle_structure.e_no)+".html", :target => "_blank"
                end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
