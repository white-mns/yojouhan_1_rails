            %th= sort_link(@search, :caution, '警戒', default_order: :desc)
            %th= sort_link(@search, :continuance, '連続', default_order: :desc)
            %th= sort_link(@search, :enthusiasm, '熱意', default_order: :desc)
            %th= sort_link(@search, :goodwill, '好感', default_order: :desc)
            %th= sort_link(@search, :forecast, '予見', default_order: :desc)
            %th= sort_link(@search, :stock, '在庫', default_order: :desc)
