              %td= fortress_data.grand
              %td= fortress_data.caution
              %td= fortress_data.continuance
              %td= fortress_data.enthusiasm
              %td= fortress_data.goodwill
              %td= fortress_data.forecast
              %td= fortress_data.stock
              %td= fortress_data.high_grade
              %td= fortress_data.mob
              %td= fortress_data.drink
              %td= fortress_data.guard.pysics
              %td= fortress_data.guard.electric_shock
              %td= fortress_data.guard.cold
              %td= fortress_data.guard.flame
              %td= fortress_data.guard.saint_devil
              %td= fortress_data.regalia_name.name
              %td= fortress_data.castle_condition.condition_text
              %td= link_to " 結果", "http://blacktea.sakura.ne.jp/teaconvini/RESULT/c"+sprintf("%04d",fortress_data.e_no)+".html", :target => "_blank"
              %td= if  fortress_data.result_no < @last_result then                                                                                                                                               |
                      generate_text = fortress_data.generate_no > 0 ? "_"+sprintf("%d",fortress_data.generate_no) : "";                                                                                         |
                      link_to " 過去結果", "http://teacon.kitunebi.com/TCV_001/"+sprintf("%03d", fortress_data.result_no)+generate_text+"/RESULT/c"+sprintf("%04d",fortress_data.e_no)+".html", :target => "_blank" |
                  end                                                                                                                                                                                           |
= paginate(@fortress_datum)
