= form_for(@buy_type_list) do |f|
  - if @buy_type_list.errors.any?
    #error_explanation
      %h2
        = pluralize(@buy_type_list.errors.count, "error")
        prohibited this buy_type_list from being saved:
      %ul
        - @buy_type_list.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :buy_type_id
    %br/
    = f.number_field :buy_type_id
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
