= form_for(@next_battle) do |f|
  - if @next_battle.errors.any?
    #error_explanation
      %h2
        = pluralize(@next_battle.errors.count, "error")
        prohibited this next_battle from being saved:
      %ul
        - @next_battle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :result_no
    %br/
    = f.number_field :result_no
  .field
    = f.label :generate_no
    %br/
    = f.number_field :generate_no
  .field
    = f.label :block_no
    %br/
    = f.number_field :block_no
  .field
    = f.label :e_no
    %br/
    = f.number_field :e_no
  .actions
    = f.submit
