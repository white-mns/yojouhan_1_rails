  <thead>
    <tr>
      <th><%= sort_link(@search, :result_no,'更新回', default_order: :desc) %></th>
      <th><%= sort_link(@search, :battle_no, 'ブロック', default_order: :desc) %></th>
      <th><%= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc) %></th>
      <th><%= sort_link(@search, :multiple_buying, '多重購入', default_order: :desc) %></th>
      <th><%= sort_link(@search, :buy_num, '販売数', default_order: :desc) %></th>
      <th><%= sort_link(@search, :buy_type, '販売種別', default_order: :desc) %></th>
      <th><%= sort_link(@search, :fortress_data_grand, '壮大', default_order: :desc) %></th>
      <th colspan="4">結果リンク</th>
    </tr>
  </thead>

  <tbody>
    <% @multiple_buyings.each do |multiple_buying| %>
      <tr>
        <td><%= multiple_buying.result_no %></td>
        <td><%= multiple_buying.battle_no %></td>
        <td><%= multiple_buying.p_name.name.html_safe + "(" + sprintf("%d",multiple_buying.e_no) + ")" %></td>
        <td><%= if multiple_buying.multiple_buying_max != multiple_buying.multiple_buying_min then
                    sprintf("%d", multiple_buying.multiple_buying_min) + "～" + sprintf("%d", multiple_buying.multiple_buying_max)
                else
                   multiple_buying.multiple_buying_max
                end %></td>
        <td><%= if multiple_buying.buy_num_max != multiple_buying.buy_num_min then
                    sprintf("%d", multiple_buying.buy_num_min) + "～" + sprintf("%d", multiple_buying.buy_num_max)
                else
                   multiple_buying.buy_num_max
                end %></td>
        <td><%= multiple_buying.buy_type_name.name %></td>
        <td><%= multiple_buying.fortress_data.grand %></td>
    	<td><%= link_to " 結果", "http://blacktea.sakura.ne.jp/teaconvini/RESULT/c"+sprintf("%04d",multiple_buying.e_no)+".html", :target => "_blank" %></td>
    	<td><%= link_to " 戦闘", "http://blacktea.sakura.ne.jp/teaconvini/RESULT/battle"+sprintf("%d",multiple_buying.battle_no)+".html", :target => "_blank" %></td>
        <td><%= if multiple_buying.result_no < @last_result then
                     generate_text = multiple_buying.generate_no > 0 ? "_"+sprintf("%d",multiple_buying.generate_no) : "";
                     link_to " 過去結果", "http://teacon.kitunebi.com/TCV_001/"+sprintf("%03d", multiple_buying.result_no)+generate_text+"/RESULT/c"+sprintf("%04d",multiple_buying.e_no)+".html", :target => "_blank"
                end %></td>
        <td><%= if multiple_buying.result_no < @last_result then
                     generate_text = multiple_buying.generate_no > 0 ? "_"+sprintf("%d",multiple_buying.generate_no) : "";
                     link_to " 過去戦闘", "http://teacon.kitunebi.com/TCV_001/"+sprintf("%03d", multiple_buying.result_no)+generate_text+"/RESULT/battle"+sprintf("%d",multiple_buying.battle_no)+".html", :target => "_blank"
                end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
